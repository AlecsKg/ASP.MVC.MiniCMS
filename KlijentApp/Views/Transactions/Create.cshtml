@model Transaction

@{
    ViewBag.Title = PrevodSrb.Kreiraj_novi;
}

<h2>@PrevodSrb.Kreiraj_novi </h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@PrevodSrb.Transakcija</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label(PrevodSrb.Opis_firme, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("selektovanaFirma", new SelectList(ViewBag.Opisi), new { @class = "form-control" })
