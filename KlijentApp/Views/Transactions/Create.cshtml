            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TransactionType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                
                @Html.DropDownListFor(model=> model.TransactionType , new SelectList(ViewBag.ListaSelekta,"Value","Text"))
                @Html.ValidationMessageFor(model => model.TransactionType, "", new { @class = "text-danger" })
                
 
            </div>
        </div>
        
        

        <!-- Kod za spajanje kalendara -->
        <script type="text/javascript">
